{
    "title":   "JSON schema for projectile.nvim projects",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id":     "https://raw.githubusercontent.com/dunstontc/projectile.nvim/master/schema/project.json",

    "type":     [ "object", "boolean" ],
    "required": [ "id", "name", "root" ],

    "properties": {
        "timestamp": {
            "description": "Date when the project was added",
            "type":        "string",
            "format":      "date"
        },
        "name": {
            "description": "Name of the project",
            "type":        "string"
        },
        "root": {
            "description": "Absolute path to the project's root directory",
            "type":        "string"
        },
        "description": {
            "description": "A description of the project",
            "type":        "string"
        },
        "vcs": {
            "description": "Is the project under version control?",
            "type":        "boolean"
        },
        "vcs_info": {
            "type": "object",
            "properties": {
              "repo_system": {
                  "description": "Version control system",
                  "type":        "string",
                  "enum": [
                      "bazaar",
                      "cvs",
                      "git",
                      "mercurial",
                      "subversion",
                      "other"
                  ]
              },
              "repo_remotes": {
                  "description": "Actively tracked remotes",
                  "type":        "array, string",
                  "format":      "url"
              },
              "repo_url": {
                  "description": "URL where the code is hosted",
                  "type":        "string",
                  "format":      "url"
              }
            }
        }
    }
}

