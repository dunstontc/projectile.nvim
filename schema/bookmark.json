{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id":     "https://raw.githubusercontent.com/dunstontc/projectile.nvim/master/schema/bookmark.json",

    "title": "JSON schema for Projectile.nvim bookmark",

    "type":     ["object", "boolean"],
    "required": [ "timestamp", "name", "path" ],

    "properties": {
        "timestamp": {
          "description": "Date when the bookmark was added",
          "type":        "string",
          "format":      "date"
        },
        "name": {
            "description": "Name of the bookmark",
            "type":        "string"
        },
        "path": {
            "description": "Absolute path to the marked file",
            "type":        "string"
        },
        "description": {
            "description": "A description of the bookmark",
            "type":        "string"
        }
    }

}

