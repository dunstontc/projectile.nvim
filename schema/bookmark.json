{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://json-schema.org/draft-06/schema#",

    "title": "JSON schema for Projectile bookmark",

    "type": ["object", "boolean"],
    "required": [ "id", "name", "path" ],

    "properties": {
        "id": {
            "description": "The unique identifier for the bookmark",
            "type": "integer"
        },
        "name": {
            "description": "Name of the bookmark",
            "type": "string"
        },
        "path": {
            "description": "Absolute path to the marked file",
            "type": "string"
        },
        "description": {
            "description": "A description of the bookmark",
            "type": "string"
        },
        "date": {
            "description": "Date when the bookmark was added",
            "type": "string",
            "format": "date"
        }
    }

}

